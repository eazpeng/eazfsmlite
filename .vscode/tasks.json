{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "Ver0711.1",
			"command": "gcc.exe",//设置了环境变量，就不需要写完整路径了
			"args": [
				// 允许输出彩色文本提示信息
				"-fdiagnostics-color=always",
				// 生成的 exe 中包含调试用信息，用于 gdb 调试，不调试可删掉，文件会小一些
				"-g",

				// 包含头文件路径，目前测试只能逐个列出，不可通配符缩写
				"-I", "${workspaceFolder}\\source\\application\\event",
				"-I", "${workspaceFolder}\\source\\application\\event\\key_event",
				"-I", "${workspaceFolder}\\source\\application\\event\\motion_event",
				"-I", "${workspaceFolder}\\source\\application\\display",
				"-I", "${workspaceFolder}\\source\\application\\fsm_lite",
				"-I", "${workspaceFolder}\\source\\application\\fsm_lite\\fsm_atom",
				"-I", "${workspaceFolder}\\source\\application\\fsm_lite\\fsm_atom\\fsm_atom_state_calibrate",
				"-I", "${workspaceFolder}\\source\\application\\fsm_lite\\fsm_atom\\fsm_atom_state_error",
				"-I", "${workspaceFolder}\\source\\application\\fsm_lite\\fsm_atom\\fsm_atom_state_low_power",
				"-I", "${workspaceFolder}\\source\\application\\fsm_lite\\fsm_atom\\fsm_atom_state_power_on",
				"-I", "${workspaceFolder}\\source\\application\\fsm_lite\\fsm_atom\\fsm_atom_state_run",
				"-I", "${workspaceFolder}\\source\\application\\fsm_lite\\fsm_atom\\fsm_atom_state_selftest",
				"-I", "${workspaceFolder}\\source\\application\\fsm_lite\\fsm_atom\\fsm_atom_state_settings",
				"-I", "${workspaceFolder}\\source\\application\\fsm_lite\\fsm_atom\\fsm_atom_state_standby",
				"-I", "${workspaceFolder}\\source\\config",
				"-I", "${workspaceFolder}\\source\\driver\\ADC",
				"-I", "${workspaceFolder}\\source\\driver\\GPIO",
				"-I", "${workspaceFolder}\\source\\driver\\HC0807RGB",
				"-I", "${workspaceFolder}\\source\\driver\\LIS2DH12",
				"-I", "${workspaceFolder}\\source\\driver\\simu_I2C",
				"-I", "${workspaceFolder}\\source\\driver\\simu_PWM",
				"-I", "${workspaceFolder}\\source\\driver\\simu_SPI",
				"-I", "${workspaceFolder}\\source\\driver\\simu_timer",
				"-I", "${workspaceFolder}\\source\\driver\\simu_UART",
				"-I", "${workspaceFolder}\\source\\driver\\temperature",
				"-I", "${workspaceFolder}\\source\\lib",

				// 待编译的文件列表，路径也没有通配符，要完整列出
				"${workspaceFolder}\\source\\*.c",
				"${workspaceFolder}\\source\\application\\event\\*.c",
				"${workspaceFolder}\\source\\application\\event\\key_event\\*.c",
				"${workspaceFolder}\\source\\application\\display\\*.c",
				"${workspaceFolder}\\source\\application\\fsm_lite\\*.c",
				"${workspaceFolder}\\source\\application\\fsm_lite\\fsm_atom\\*.c",
				"${workspaceFolder}\\source\\application\\fsm_lite\\fsm_atom\\fsm_atom_state_calibrate\\*.c",
				"${workspaceFolder}\\source\\application\\fsm_lite\\fsm_atom\\fsm_atom_state_error\\*.c",
				"${workspaceFolder}\\source\\application\\fsm_lite\\fsm_atom\\fsm_atom_state_low_power\\*.c",
				"${workspaceFolder}\\source\\application\\fsm_lite\\fsm_atom\\fsm_atom_state_power_on\\*.c",
				"${workspaceFolder}\\source\\application\\fsm_lite\\fsm_atom\\fsm_atom_state_run\\*.c",
				"${workspaceFolder}\\source\\application\\fsm_lite\\fsm_atom\\fsm_atom_state_selftest\\*.c",
				"${workspaceFolder}\\source\\application\\fsm_lite\\fsm_atom\\fsm_atom_state_settings\\*.c",
				"${workspaceFolder}\\source\\application\\fsm_lite\\fsm_atom\\fsm_atom_state_standby\\*.c",
				"${workspaceFolder}\\source\\driver\\ADC\\*.c",
				"${workspaceFolder}\\source\\driver\\GPIO\\*.c",
				"${workspaceFolder}\\source\\driver\\HC0807RGB\\*.c",
				"${workspaceFolder}\\source\\driver\\LIS2DH12\\*.c",
				"${workspaceFolder}\\source\\driver\\simu_I2C\\*.c",
				"${workspaceFolder}\\source\\driver\\simu_PWM\\*.c",
				"${workspaceFolder}\\source\\driver\\simu_SPI\\*.c",
				"${workspaceFolder}\\source\\driver\\simu_timer\\*.c",
				"${workspaceFolder}\\source\\driver\\simu_UART\\*.c",
				"${workspaceFolder}\\source\\driver\\temperature\\*.c",
				"${workspaceFolder}\\source\\lib\\*.c",

				// 输出路径、目标代码名称
				"-o",
				"${workspaceFolder}\\build\\fsm_lite.exe"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "compiler: gcc.exe"
		}
	]
}